- extends 'base_cataloged_navig_game.haml'
- load i18n

- block extra_scripts
        %script{type: 'text/javascript', src: '/static/ajaxuploader/js/fileuploader.js'}
        <link href="/static/ajaxuploader/css/fileuploader.css" media="screen" rel="stylesheet" type="text/css" />    
        
- block page_content
    - for game_file in game_files
        %h3
            = game_file.caption
        - if game_file.saved
            %img{src: '{{ game_file.url }}'}
            %br
            %br
            %a{href: '{{ game_file.url }}'} 
                {% trans "Download" %}
        - else
            {% trans "Not loaded yet" %}
        %br
        %br
        %div.wrapper.controls{id: 'file-uploader-{{ game_file.name }}'}
            %div#file-uploader-button.button
                %script{type: 'text/javascript'}
                    - include 'games/snippets/graphicupload.html'