- extends 'base.haml'
- load i18n

- block breadcrumbs
    %a{href: '{% url "news:list" %}'}
        {% trans "News" %}
    %a{href: '{% url "news:detail" object.id %}'}
        = object.caption

- block caption
    = object.caption

- block content
    %time.news_datetime.pull-right{datetime: '{{ object.published_at }}', pubdate: 'pubdate'}
        = object.published_at
    .full_text
        - if object.full_text
            = object.full_text|safe
        - else
            = object.announcement|safe
