- extends 'base_cataloged_navig_game.haml'
- load i18n

- block caption
    = variation.name
    \-
    {% trans "Roles" %}

- block extra_scripts
    %link{rel: 'stylesheet', type: 'text/css', href: '{{ STATIC_URL }}stories/tulius-stories.css'}
    
- block content
    .pull-right
        %a.submit.btn.btn-primary.pull-right{href: '{% url "stories:edit_variation_roles" variation.id %}'}
            {% trans "to roles" %}

   %table
        %tr
            %td{style: 'text-align: center'}
                  .story-character
                    - if role.avatar
                        .character-avatar
                            %img{align:'left', src: '{{ role.avatar.image.url }}'}
                        .character-text
                            %h3
                                = role.name
                            = role.description
    %table
        %tr
            %td{style: 'text-align: left'}
                - if role.body
                    = role.body|safe
                - else
                    %br
                    {% trans "No role text" %}
                    %br
                    %br
